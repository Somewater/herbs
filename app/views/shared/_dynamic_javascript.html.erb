Herbs = {
    basket_add: "<%= basket_add_path %>",
    basket_remove: "<%= basket_remove_path %>",
    basket_clear: "<%= basket_clear_path %>",
    basket_show: "<%= basket_show_path %>",
    basket_apply: "<%= basket_apply_path %>",
    <% if @section %>
        section_show: "<%= section_path(@section) %>",
        section_page: <%= (@page_idx || 0) %>,
    <% end %>
    <% if @product %>
        product: <%= {id: @product.id}.to_json.html_safe %>,
        product_costs: <%= @product.costs.map{|c| {id: c.id, cost: c.cost, amount: c.amount} }.to_json.html_safe %>,
        product_selected_cost_idx: 0,
    <% end %>
    main_page_pictures: <%= Section.herbs_sections.preload(:image).map{|s| s.image.try(:url)}.compact.to_json.html_safe %>
}