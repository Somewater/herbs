<div class="thumbnail">
    <% if @product.image %>
        <img src="<%= @product.image.url %>">
    <% end %>
    <div class="caption">
        <h3><%= @product.title %></h3>
        <strong><%= @product.description %></strong>
        <p></p>
        <% @product.costs.each do |cost| %>
            <p><%= cost.cost %> руб. / <%= cost.amount %> г.</p>
        <% end %>
    </div>
</div>