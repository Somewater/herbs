<div class="row-fluid">
    <ul class="thumbnails">
        <% @products.each do |product| %>
            <li class="span4">
                <a href="<%= product_path product %>">
                    <div class="thumbnail">
                        <% if product.image %>
                            <img src="<%= product.image.url %>">
                        <% end %>
                        <div class="caption">
                            <h3><%= product.title %></h3>
                            <p><%= product.cost.cost %> руб. / <%= product.cost.amount %> г.</p>
                        </div>
                    </div>
                </a>
            </li>
        <% end %>
    </ul>
</div>